<% unless @album.valid? %>
  $('.error-text').remove();
  <% @album.errors.full_messages.each do |msg| %>
    $('.album_name_div').append("<p class='error-text text-danger'><span class='glyphicon glyphicon-exclamation-sign'></span> <%= msg.to_s.humanize %></p>").hide().fadeIn(100);
  <% end %>

  $('#album_name').focus(function() {
    $('.error-text').remove();
  })
<% end %>