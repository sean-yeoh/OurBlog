<%= form_for post do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control", rows: 8 %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>