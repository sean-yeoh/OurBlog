<div class="btn-group btn-group-justified">
  <%= link_to "Blog", root_path, class: "btn btn-primary" %>
  <%= link_to "Photos", photos_path, class: "btn btn-default" %>
</div>

<br>

<div class="row">
  <div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
    <% @posts.each do |post| %>
      <div class="post-home-page">
        <h2 class="post-title text-center"><%= link_to post.title, post_path(post) %></h2>
        <p class="text-center posted-by"><%= post.created_at.strftime("Posted on %I:%M %p, %A, %d %B %Y") %> by <%= post.user.name %></p>
        <p><%= sanitize post.content, tags:  %w(strong em a u s sub sup img div figure figcaption p hr ol ul li table caption tbody tr td span), attributes: %w(href style border summary cellspacing cellpadding alt src title width height class ) %></p>
      </div>
    <% end %>
  </div>

  <div class="col-md-2 col-lg-2 col-sm-2 col-xs-2">
    <p>Posts archive</p>
  </div>
</div>
